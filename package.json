{
  "name": "mern-chat-app",
  "version": "1.0.0",
  "description": "Full-stack MERN chat application with Socket.io",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "npm run server:start",
    "build": "npm run client:build",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:prod": "cd server && npm run prod",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install:all": "npm install && npm run install:server && npm run install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "lint": "npm run client:lint && npm run server:lint",
    "client:lint": "cd client && npm run lint",
    "server:lint": "echo 'No server linting configured'",
    "health:server": "cd server && npm run health",
    "test": "echo 'No tests configured'",
    "clean": "rm -rf node_modules server/node_modules client/node_modules client/dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PLP-MERN-Stack-Development/week-7-devops-deployment-assignment-KamungeD.git"
  },
  "keywords": [
    "mern",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "socket.io",
    "chat",
    "real-time"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
